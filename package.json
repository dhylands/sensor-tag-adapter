{
  "name": "sensor-tag-adapter",
  "display_name": "Sensor Tag",
  "version": "0.1.0",
  "description": "Connect your Sensor Tag devices",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/sensor-tag-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/sensor-tag-adapter/issues"
  },
