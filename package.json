  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "sensor-tag-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "pollInterval"
      ],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The number of seconds between two polls"
        }
      }
    }
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0"
